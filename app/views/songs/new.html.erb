<%= form_for @song do |f| %>
  <% if @errors %>
    <div>
      <ul>
        <% @errors.messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :title %>
  <%= f.text_field :artist_name %>
  <%= f.text_field :released %>
  <%= f.text_field :released_year %>
  <%= f.text_field :genre %>
  <%= f.submit %>
<% end %>
